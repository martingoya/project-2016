@model IEnumerable<Model.Models.Event>


@{
    var intercalation = true;
}
@foreach (var item in Model)
{
    if (intercalation)
    {
        <div id="intercalationItemOne">
            <div class="container alignCenter">
                <div class="row entryEventSection">
                    <div class="col-lg-7 col-md-7 eventImageSection">
                        <a href='@Url.Action(Html.DisplayFor(modelItem => item.TypeEvent.Name).ToHtmlString(), "Home", new { identifier = Html.DisplayFor(modelItem => item.Path).ToHtmlString() })'>
                            <figure><img alt=@Html.DisplayFor(modelItem => item.Title) src="~/@Html.DisplayFor(modelItem => item.CoverImage.ImagePath)"></figure>
                        </a>
                    </div>
                    <div class="col-lg-5 col-md-5 eventTitleSection">
                        <a href='@Url.Action(Html.DisplayFor(modelItem => item.TypeEvent.Name).ToHtmlString(), "Home", new { identifier = Html.DisplayFor(modelItem => item.Path).ToHtmlString() })'>
                            <p>
                                @item.Title
                            </p>
                        </a>
                        <p>
                            @item.Introduction
                        </p>
                        <a href='@Url.Action(Html.DisplayFor(modelItem => item.TypeEvent.Name).ToHtmlString(), "Home", new { identifier = Html.DisplayFor(modelItem => item.Path).ToHtmlString() })'>
                            Ver más
                        </a>
                    </div>
                </div>
            </div>
        </div>
        intercalation = false;
    }
    else
    {
        <div id="intercalationItemTwo">
            <div class="container alignCenter">
                <div class="row entryEventSection">
                    <div class="col-lg-5 col-md-5 eventTitleSection">
                        <a href='@Url.Action(Html.DisplayFor(modelItem => item.TypeEvent.Name).ToHtmlString(), "Home", new { identifier = Html.DisplayFor(modelItem => item.Path).ToHtmlString() })'>
                            <p>
                                @item.Title
                            </p>
                        </a>
                        <p class="eventIntrodutionSection">
                            @item.Introduction
                        </p>
                        <a href='@Url.Action(Html.DisplayFor(modelItem => item.TypeEvent.Name).ToHtmlString(), "Home", new { identifier = Html.DisplayFor(modelItem => item.Path).ToHtmlString() })'>
                            Ver más
                        </a>
                    </div>
                    <div class="col-lg-7 col-md-7 eventImageSection">
                        <a href='@Url.Action(Html.DisplayFor(modelItem => item.TypeEvent.Name).ToHtmlString(), "Home", new { identifier = Html.DisplayFor(modelItem => item.Path).ToHtmlString() })'>
                            <figure><img alt=@Html.DisplayFor(modelItem => item.Title) src="~/@Html.DisplayFor(modelItem => item.CoverImage.ImagePath)"></figure>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        intercalation = true;
    }
}
@{
    <div class="rowSectionPageNavigation">
        <div class="container alignCenter">
            <div class="row">
                <div class="col-md-2 col-sm-2 col-xs-2">
                    @if (ViewBag.previousPage != null)
                    {
                        <a href='@Url.Action(ViewBag.Title, "Home", new { identifier = ViewBag.previousPage })' title="Página anterior">
                            <p><<<</p>
                        </a>
                    }
                </div>
                <div class="col-md-2 col-sm-2 col-md-offset-8 col-sm-offset-8" style="float:right">
                    @if (ViewBag.nextPage != null)
                    {
                        <a href='@Url.Action(ViewBag.Title, "Home", new { identifier = ViewBag.nextPage })' title="Página siguiente">
                            <p>>>></p>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
}


<script>
    $(document).ready(function () {

        $('.entryEventSection').each(function (i) {

            var bottom_of_object = $(this).position().top + $(this).outerHeight();
            var bottom_of_window = $(window).scrollTop() + $(window).height();

            /* If the object is completely visible in the window, fade it it */
            if (bottom_of_window > bottom_of_object - 100) {

                $(this).animate({ 'opacity': '1' }, 500);

            }

        });
        /* Every time the window is scrolled ... */
        $(window).scroll(function () {

            /* Check the location of each desired element */
            $('.entryEventSection').each(function (i) {

                var bottom_of_object = $(this).position().top + $(this).outerHeight();
                var bottom_of_window = $(window).scrollTop() + $(window).height();

                /* If the object is completely visible in the window, fade it it */
                if (bottom_of_window > bottom_of_object - 100) {

                    $(this).animate({ 'opacity': '1' }, 500);

                }

            });

        });

    });
</script>

